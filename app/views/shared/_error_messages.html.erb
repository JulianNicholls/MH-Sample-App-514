<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form has <%= pluralize(object.errors.count, 'error') %>.
    </div>
    <ol>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  </div>
<% end %>
